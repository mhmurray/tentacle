# Allow for a system-specific .bashrc_interactive file specified locally
if [ -f ${HOME}/.bashrc_login_local ]; then
  source ${HOME}/.bashrc_login_local
fi

# Allow for a system-specific bashrc_login_${HOST} in tentacle/
# eg. if ~/tentacle/bashrc_login_muon5 exists, source it.
# However, don't source it again if it was linked from *_local, above
BRCD_HOSTPRENAME=$(hostname | cut -d "." -f 1)
# Guard against sourcing the same file again by checking device and inode
if [ -f "${PRF}bashrc_login_${BRCD_HOSTPRENAME}" ]; then
  if [ ! "${HOME}/.bashrc_login_local" \
       -ef "${PRF}bashrc_login_${BRCD_HOSTPRENAME}" ]; then
    source "${PRF}bashrc_login_${BRCD_HOSTPRENAME}"
  fi
fi
unset BRCD_HOSTPRENAME
