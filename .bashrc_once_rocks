# These are specific to a single musun installation.
# You will have to modify this file on a host-by-host basis.
# To maintain version control, the set of .bashrc_musun_hostname
# files will exist in the git repo.

# CVS
export CVSROOT="mhmurray@muon.npl.washington.edu:/home/cvs/musun/cvsroot"
export CVS_RSH="/home/mhmurray/openssh/bin/ssh";

# ROOT
source $HOME/root/bin/thisroot.sh

# MIDAS
source $HOME/musun/daq/midas/thismidas.sh

# LtFit blinding offset
export LTFITINSTITUTION=UW

# MU and MTA
source $HOME/musun/mu/thismu.sh

# PyROOT
export PYTHONDIR=/share/apps/python27
export LD_LIBRARY_PATH=$PYTHONDIR/lib:$LD_LIBRARY_PATH

# Rocks SCRATCH drive
export SCRATCH=/SCRATCH/mhmurray
