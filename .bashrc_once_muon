# Use keychain to manage ssh keys for passwordless login.
# Note: --nogui option prompts on the command line, no pop-up, even with X.
keychain --quiet --nogui ~/.ssh/id_dsa
. ~/.keychain/$HOSTNAME-sh

# CVS
export CVSROOT="mhmurray@muon.npl.washington.edu:/home/cvs/musun/cvsroot"

# ROOT
source /opt/root_v5.32.00-svn/bin/thisroot.sh

# MIDAS
source $HOME/musun/daq/midas/thismidas.sh

# LtFit blinding offset
export LTFITINSTITUTION=UW

# MU and MTA
source $HOME/musun/mu/thismu.sh

# PyROOT
export LD_LIBRARY_PATH=/usr/lib/python2.6:$LD_LIBRARY_PATH
